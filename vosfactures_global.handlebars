<div class="invoice_outline" {{#if status_paid}}{{#not_in kind "proforma,estimate"}}style="background:transparent url('{{paid_mark_url}}') no-repeat 60% 50%"{{/not_in}}{{/if}} >


{{#if stamp_url}}
	<div style="background:transparent url('{{stamp_url}}') no-repeat  90% 82%"  id="custom_stamp">
{{/if}}


	{{#if payment_url}}
		<a class="payment_button" href="{{payment_url}}"><img src="{{payment_button_url}}" alt="online payment"/></a>
	{{/if}}

	<table   class="full_width">



		<tr>
			<td class="vert_align_top  text_left" >
				
				<p>

					<strong class="big_text">{{document_type}}</strong> 
					<br/>
					<strong class="medium_text">{{tt "invoice.number"}} {{number}}</strong>
				
				</p>
				<p>
				
					<strong class="medium_text">{{print_option}}</strong>
					<br/>
					{{#if issue_place}}
						{{tt "invoice.place"}}: {{issue_place}}, le {{issue_date}} <br/>	
					{{else}}
						{{tt "invoice.issue_date"}}: {{issue_date}} <br/>	
					{{/if}}
					{{#if sell_date}}
						{{#if sell_date_kind}}
							{{{sell_date_kind}}}: {{sell_date}}
						{{else}}
							{{tt "invoice.sell_date"}}: {{sell_date}}
						{{/if}}
					{{/if}}
				</p>				

			</td>

			<td class="vert_align_top text_right">

				{{#if logo_url}}
		
					
						<img src="{{logo_url}}" alt="logo"/>
					
		
				{{/if}}
				

			</td>
		</tr>
	</table>


	<table   class="seller_buyer full_width">
		<tr>
			<td style="width:70%"  class="vert_align_top">

				<strong>{{tt "invoice.seller"}}:</strong><br/>
				{{company}}<br/>
				{{{address}}}<br/>
				{{!-- NIP {{tax_no}}<br> --}}
				
				

				{{#if bank}}<br/>{{bank}} {{bank_account}}<br/>{{/if}}
				{{#if email}}<br/>{{email}}{{/if}}
				
				{{#if www}}<br/>{{www}}{{/if}}
				
				<br/>
				{{#if phone}}T: {{phone}}{{/if}}
				{{#if fax}}, F: {{fax}}{{/if}}

			</td>

			<td  style="width:30%"  class="vert_align_top">


				<strong>{{tt "invoice.buyer"}}:</strong><br/>

				{{buyer}}<br/>
				{{{buyer_address}}}<br/>
				{{#if buyer_company}}
					{{#if buyer_tax_no}}
						{{tax_name}} {{buyer_tax_no}}<br/>
					{{/if}}
				{{/if}}
				<br>
				{{#if use_delivery_address}}
					{{#if delivery_address}}
					<strong>{{tt "client.delivery_address"}}:</strong><br/>
						{{{delivery_address}}}
					{{/if}}
				{{/if}}

			</td>
		</tr>
	</table>

	{{#if title}}
	
	<table class="full_width">



			<tbody><tr>
				<td class="small_text text_center">
				
					<span>
						<h4>{{title}}</h4>					
					</span>
				</td>

			</tr>

		</tbody></table>
	
	
		
	{{/if}}

	<table class="main_inv_table full_width">

		<thead>
			<tr>
				<th class="width1 no_wrap">
					{{tt "invoice_position.nr"}}
				</th>
				<th class="width4 text_left">
				 {{tt "invoice_position.name"}}
				</th>

				{{#not_eq kind 'advance'}}
					{{#if use_product_code}}
						<th class="width2">
							{{tt "invoice_position.code"}}
						</th>				
					{{/if}}

					{{#if additional_info}}				
					<th class="width2">
						{{additional_info_desc}}
					</th>				
					{{/if}}
					{{#if discount}}				
					<th class="width2 text_center">
						{{tt "invoice_position.discount_percent"}}
					</th>				
					{{/if}}

					<th class="width2 text_center">
						{{tt "invoice_position.quantity"}}
					</th>
					{{#if tax_visible}}
						<th class="width3 text_right ">
							{{tt "invoice_position.price_net"}}
						</th>
						<th class="width3 text_right ">
							{{tt "invoice_position.total_price_net"}}
						</th>
						<th class="width1 text_center ">
							{{tax_name}}
						</th>
						{{#if tax2_visible}}
							<th class="width1 text_center ">
								{{tax2_name}}
							</th>
						{{/if}}
						<th class="width3 text_right ">					
							{{tax_value_name}}					
						</th>
						<th class="width3 text_right ">
							 {{tt "invoice_position.total_price_gross"}}
						</th>
					{{else}}
						<th class="width3 text_right ">
							{{tt "invoice_position.bill_price_net"}}
						</th>
						<th class="width3 text_right ">
							 {{tt "invoice_position.bill_total_price_gross"}}
						</th>
					{{/if}}
				{{else}}
					<th class="width3 text_right ">
						{{tt "invoice_position.total_price_net"}}
					</th>
				{{/not_eq}}
			</tr>
		</thead>
		<tbody>
			{{#each positions}}
			<tr>
				<td>
					{{no}}
				</td>
				<td>
					{{item}}
				</td>
				{{#not_eq ../kind 'advance'}}
					{{#if ../../use_product_code}}
						<td>
						{{code}}
						</td>					
					{{/if}}
					
					{{#if ../../additional_info}}				
					<td>
						{{additional_info}}
					</td>				
					{{/if}}
					
					{{#if ../../discount}}
					<td class="text_center">
						{{discount}}
					</td>
					{{/if}}				

					<td class="text_center">
						{{quantity}}
					</td>
					<td class="text_right number">
						{{unit_price_net}}
					</td>

					{{#if ../../tax_visible}}

						<td class="text_right number">
							{{total_price_net}}
						</td>			

						<td class="text_right number">
							{{tax}}%
						</td>
						{{#if ../../../tax2_visible}}
							<td class="text_right number">
								{{tax2}}%
							</td>
						{{/if}}
						<td class="text_right number">
							{{tax_value}}
						</td>
					{{/if}}				
		
					<td class="text_right number">
						{{total_price_gross}}
					</td>
				{{else}}
					<td class="text_right number">
						{{total_price_net}}
					</td>
				{{/not_eq}}
			</tr>

			{{/each}}
			
		
			
				<tr class="clean no_border">
								
					{{#not_eq kind 'advance'}}		
						<td class=""></td>
						<td class=""></td> 
						{{#if use_product_code}}
						<td class=""></td>
						{{/if}}
						{{#if additional_info}}				
						<td class=""></td>
						{{/if}}
						{{#if discount}}
						<td class=""></td>
						{{/if}}
						{{#if tax_visible}}
							<td class=""></td>
						{{/if}}		
					{{/not_eq}}
					<td  class="text_right no_border">
						<strong>{{tt "invoice.total"}}</strong>
					</td>
					{{#not_eq kind 'advance'}}
						<td class="text_right number">
							{{#not_eq kind 'final'}}
								{{total_price_net}}
							{{/not_eq}}
							{{#eq kind 'final'}}
								{{positions_total_price_net}}
							{{/eq}}
						</td>
						{{#if tax_visible}}
							<td class=""></td>
							{{#if ../tax2_visible}}
								<td class=""></td>
							{{/if}}

							<td class="text_right number">
								{{#not_eq kind 'final'}}
									{{tax_value}}
								{{/not_eq}}
								{{#eq kind 'final'}}
									{{positons_total_tax}}
								{{/eq}}
								
							</td>
						{{/if}}
					{{else}}
						<td class=""></td>
					{{/not_eq}}
					<td class="width3 text_right number">
						{{#not_eq kind 'final'}}
							{{total_price_gross}}
						{{/not_eq}}
						{{#eq kind 'final'}}
							{{positions_total_price_gross}}
						{{/eq}}
					</td>						
				</tr>

				{{#if tax_visible}}
				{{#each summary}}
				<tr class="no_border">
					{{#not_eq ../kind 'advance'}}	
						<td class=""></td>
						<td class=""></td>
						{{#if ../../use_product_code}}
						<td class=""></td>
						{{/if}}
						{{#if ../../discount}}
						<td class=""></td>
						{{/if}}
						{{#if ../../additional_info}}				
						<td class=""></td>
						{{/if}}

						{{#if ../../tax_visible}}
							<td class=""></td>
						{{/if}}
					{{/not_eq}}

					<td class="text_right number">
						
						{{#eq ../kind 'advance'}}
							{{tax}}%
						{{else}}
							<strong>{{tt "invoice.including"}}</strong>
						{{/eq}}
					</td>

					{{#not_eq ../kind 'advance'}}
						<td class="text_right number">
							{{total_price_net}}
						</td>

						{{#if ../../tax_visible}}
						<td class="text_right number">
							{{tax}}%
						</td>
							{{#if ../../../tax2_visible}}
							<td class="text_right number">
								{{tax2}}%
							</td>
							{{/if}}
						{{/if}}
					{{/not_eq}}
					

					<td class="text_right number">

						{{tax_value}}
					</td>
					<td class="width3 text_right  number">
						{{total_price_gross}}
					</td>					
				</tr>
				{{/each}}
				{{/if}}
		</tbody>
	</table>


	<div class="clear"></div>  

	{{#if exchange_currency}}
	<table class="clean to_right">
		<tr>
			<th>
				{{tt "invoice.total_price_net" }}
			</th>
			<td class="number">
			    {{ total_price_net}}{{currency}}
			</td>
			<td class="number">			    
			    {{ total_price_net_in_exchange_currency }}{{exchange_currency}}
			</td>
		</tr>
		{{#if tax_visible}}
		<tr>
			<th>
				{{tax_value_name}}
			</th>
			<td class="number">
			    {{ tax_value }}{{currency}}
			</td>
			<td class="number">			    
			    {{ tax_value_in_exchange_currency }}{{exchange_currency}}
			</td>
		</tr>
		<tr>
			<th>
				{{tt "invoice.total_price_gross" }}
			</th>
			<td class="number">
			    {{ total_price_gross}}{{currency}}
			</td>
			<td class="number">			    
			    {{ total_price_gross_in_exchange_currency }}{{exchange_currency}}
			</td>
		</tr>
		{{/if}}
			
	</table>

	<div class="clear"></div>


	<table class="clean" id="exchange_currency">
		<tbody>
			<tr>		
				<td>
					{{long_exchange_note}}<br\>
				</td>
			</tr>
		</tbody>
	</table>
	{{/if}}

		  


	<table  class="full_width" style="margin-top:20px">
		<tr>
			<td class="empty">

				<strong class="medium_text">{{tt "invoice.to_pay"}}: {{outstanding}}  </strong> 
				{{#if outstanding_in_words}}
				<strong>{{tt "invoice.in_words"}}:</strong> {{{outstanding_in_words}}} <br/>
				{{/if}}
				<br/>
				{{#if paid}}

				<strong>{{tt "invoice.paid"}}:</strong> 	{{paid}}

				{{/if}}

				<br/>
				{{#if type_of_payment}}
					<strong>{{tt "invoice.payment_type"}}:</strong> {{type_of_payment}}  <br/>
				{{/if}}

				{{#if payment_to}}
					<strong>{{tt "invoice.payment_date"}}:</strong> {{payment_to}}	<br/>
				{{/if}}
			
				{{#if notes}}
					<br/>
					<strong>{{tt "invoice.description"}}:</strong> {{{notes}}}
				{{/if}}


			</td>

		</tr>
	</table>

	<br/><br/>

	<table  class="full_width">
		<tr>
			<td class="text_center half_width">
				{{#if person}}
				<strong>{{tt "invoice.seller_person"}}</strong>
				<br/>
				<i>{{person}}</i>

				{{/if}}
			</td>

			<td   class="text_center half_width">
				
			</td>
		</tr>
	</table>

{{#if description_footer}}
	<br>
	<br>

	<table  class="full_width" >

		<tr>
			<td class="small_text text_center">
				<br/><br/><br/>
				<hr>
				<span>{{description_footer}}</span>
			</td>

		</tr>

	</table>			

{{/if}}


{{#if description_long}}
	<div style="page-break-after:always !important;"></div>
	<br/>
	<br/>
	<br/>
	<div class="invoice_outline">
	
		<table  class="full_width" >



			<tr>
				<td class="small_text text_center">
				
					<span>{{description_long}}</span>
				</td>

			</tr>

		</table>
	
	</div>
{{/if}}	


{{#if stamp_url}}
</div> <!-- custom_stamp -->
{{/if}}




</div> <!-- invoice_outline -->



	
