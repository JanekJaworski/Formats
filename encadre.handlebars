							<th class="gray nowrap">{{tt "invoice.paid"}}</th>
							<td>
								{{#if paid}}
									{{paid}}
								{{else}}
									{{zero_with_currency}}
								{{/if}}
								{{#and show_paid_date paid_date}}
									<br /><small>{{tt 'invoice.paid_on'}} {{paid_date}}</small>
								{{/and}}
							</td>
							{{#if exchange_currency}}
								<td>
								{{#if paid}}
									
								{{else}}
									{{zero_with_currency_in_exchange_currency}}
								{{/if}}
								{{#and show_paid_date paid_date}}
									<br /><small>{{tt 'invoice.paid_on'}} {{paid_date}}</small>
								{{/and}}
							</td>
							{{/if}}
						</tr>
					{{/or}}
					<tr>
						<th class="gray">{{#if negative_outstanding}}{{tt "invoice.to_receive"}}{{else}}{{tt "invoice.to_pay"}}{{/if}}</th>
						<td class="to-pay">{{absolute_outstanding}}</td>
