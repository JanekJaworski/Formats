						{{/if}}
					</td>
				</tr>
				<tr class="tab-row">
					<td class="tab-cell  gray bold" width="
						{{#and issue_place oid}}
							25%
						{{else}}
							{{#or issue_place oid}}
								33%
							{{else}}
								50%
							{{/or}}
						{{/and}}
						">
						{{tt "invoice.number"}}
					</td>
					<td class="tab-cell  gray bold" width="
						{{#and issue_place oid}}
							25%
						{{else}}
							{{#or issue_place oid}}
								34%
							{{else}}
								50%
							{{/or}}
						{{/and}}
						">
						{{tt "invoice.issue_date"}}
					</td>
					{{#if issue_place}}
						<td class="tab-cell  gray bold" width="
						{{#if oid}}
							25%
						{{else}}
							33%
						{{/if}}
						">
							{{tt "invoice.place"}}
						</td>
					{{/if}}
					{{#if oid}}
						<td class="tab-cell uppercase gray bold" width="
						{{#if issue_place}}
							25%
						{{else}}
							33%
						{{/if}}
						">
							{{tt 'invoice.oid'}}
						</td>
					{{/if}}
				</tr>
				<tr class="tab-row">
					<td class="tab-cell">
						{{number}}
					</td>
					<td class="tab-cell">
						{{issue_date}}
					</td>
					
					{{#if issue_place}}
						<td class="tab-cell">
							{{issue_place}}
						</td>
					{{/if}}
						
					{{#if oid}}
						<td class="tab-cell">
							{{oid}}
						</td>
					{{/if}}
					

				</tr>
			</table>

			<table class="top_table">
				<tr class="tab-row">
					<td class="tab-cell padding-bottom text-left">
						<strong>{{#if buyer_company}} {{else}} {{buyer_title}} {{/if}} {{{buyer}}}</strong><br />
						{{{buyer_address}}}<br />
						{{#if buyer_company}}
							{{#if buyer_tax_no}}
								{{buyer_tax_no_kind}} {{buyer_tax_no}}
							{{/if}}
						{{/if}}
					</td>
				</tr>
				{{#and show_buyer_note buyer_note}}
					<tr>
						<td class="tab-cell text-left">
							{{{buyer_note}}}
						</td>
					</tr>
				{{/and}}
			</table>

			{{#and use_delivery_address delivery_address}}
			<table class="top_table">
				<tr class="tab-row">
					<td class="tab-cell uppercase gray bold" >
						{{tt "client.delivery_address"}}
					</td>
				</tr>

				<tr class="tab-row">
					<td class="tab-cell padding-bottom text-left">
						{{{delivery_address}}}
					</td>
				</tr>
			</table>
			{{/and}}

		</div><!-- top_right-->
	</section>



